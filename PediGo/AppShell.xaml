<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PediGo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PediGo"
    xmlns:pages="clr-namespace:PediGo.Pages"
    Shell.FlyoutBehavior="Locked"
    Shell.FlyoutBackgroundColor="black"
    Shell.FlyoutWidth="60"
    Title="PediGo @VKcoders">

    <ShellContent
        Title="Home"
        Icon="home.png"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="Home" />

    <ShellContent
        Title="Store"
        Icon="store.png"
        ContentTemplate="{DataTemplate pages:StorePage}"
        Route="Store" />

    <ShellContent
        Title="Storage"
        Icon="storage.png"
        ContentTemplate="{DataTemplate pages:StoragePage}"
        Route="Storage" />

    <Shell.FlyoutFooter>
        <Image
            Source="command.png"
            HeightRequest="25"
            WidthRequest="25"
            Margin="0, 0, 0, 40"/>
    </Shell.FlyoutFooter>
</Shell>
